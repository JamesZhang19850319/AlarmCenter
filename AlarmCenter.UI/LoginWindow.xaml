<Window x:Class="AlarmCenter.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlarmCenter登陆" Height="179" Width="306" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Loaded="Window_Loaded" Background="#FFEEF5FD" Closing="Window_Closing">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="32,20,0,0" Name="textBlock1" Text="用户名：" VerticalAlignment="Top" />
        <TextBox Name="tbUserName" Margin="0,19,27,0" HorizontalAlignment="Right" Width="171" Height="23" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="33,57,0,0" Name="textBlock2" Text="密   码：" VerticalAlignment="Top" />
        <Button Content="登录" Margin="33,103,0,0" Name="btnLogin" Click="btnLogin_Click" HorizontalAlignment="Left" Width="90" Height="25" VerticalAlignment="Top" />
        <Button Content="取消" Margin="0,103,35,0" Name="btnCancel" Click="btnCancel_Click" HorizontalAlignment="Right" Width="90" Height="25" VerticalAlignment="Top" />
        <PasswordBox Margin="0,57,27,0" Name="pbPassword" HorizontalAlignment="Right" Width="171" Height="23" VerticalAlignment="Top" />
    </Grid>
</Window>
